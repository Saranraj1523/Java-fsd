package FileHandling;
import java.io.File;
import java.util.Scanner;
import java.io.FileWriter;
import java.io.FileReader;


public class Main {

	
		
		static Scanner in=new Scanner(System.in);
		static String str =in.nextLine();
		static char[] arr= new char[50];
		public static void main(String[] args) {
		try{
			File file=new File("D://program//test.txt");
			file.createNewFile();
			FileWriter input=new FileWriter("D://program//test.txt");
			input.write(str);
			System.out.println("String is written to the file");
		    input.close();
			FileReader out = new FileReader("D://program//test.txt");
			out.read(arr);
			System.out.println(arr);
				
			
			
		}
		catch(Exception ae){
			ae.getStackTrace();
		}

	}

}
